<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_iv_adopt"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/icon_name" />

        <TextView
            android:id="@+id/tname"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:text="名称: "
            android:textSize="18sp" />

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView2"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:layout_weight="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_iv_adopt2"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tname1"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:text="教师："
            android:textSize="18sp" />

        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView3"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_iv_adopt3"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/icon_credit" />

        <TextView
            android:id="@+id/tname2"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:text="学分："
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:layout_weight="5"

            android:entries="@array/credit"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"  />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:layout_weight="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_iv_adopt4"
            android:layout_width="52dp"
            android:layout_height="62dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/icon_kind" />

        <TextView
            android:id="@+id/tname3"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:text="类别："
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:layout_weight="5"

            android:entries="@array/kinds"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:layout_weight="5" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_iv_adopt6"
            android:layout_width="52dp"
            android:layout_height="62dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/icon_college" />

        <TextView
            android:id="@+id/tname9"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="3"
            android:text="开课学院："
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:spinnerMode="dialog"
            android:entries="@array/college"
            android:dropDownVerticalOffset="-50dp"
            android:dropDownHorizontalOffset="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="2"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:layout_weight="5" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1000"
            android:background="@drawable/button_style"
            android:onClick="onClick_back"
            android:text="返回"

            android:textColor="@color/white" />

        <ImageView

            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1000"
            android:background="@drawable/button_style"
            android:onClick="onClick_confirm"
            android:text="确认"
            android:textColor="@color/white" />




    </LinearLayout>
</LinearLayout>
